<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.georgia.sps_knn.MainActivity">

    <TextView
        android:id="@+id/Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="@string/Activity" />

    <ImageView
        android:id="@+id/Cell1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Activity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        app:srcCompat="@drawable/square" />

    <ImageView
        android:id="@+id/Cell2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Cell1"
        android:layout_toEndOf="@+id/Cell1"
        android:layout_toRightOf="@+id/Cell1"
        app:srcCompat="@drawable/square" />

    <ImageView
        android:id="@+id/Cell3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Cell2"
        android:layout_toEndOf="@+id/Cell2"
        android:layout_toRightOf="@+id/Cell2"
        app:srcCompat="@drawable/square" />

    <ImageView
        android:id="@+id/Cell4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Cell3"
        android:layout_toEndOf="@+id/Cell3"
        android:layout_toRightOf="@+id/Cell3"
        app:srcCompat="@drawable/square" />

    <TextView
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Cell2"
        android:layout_alignLeft="@+id/Cell1"
        android:layout_alignStart="@+id/Cell1"
        android:layout_marginLeft="32dp"
        android:text="@string/cell1" />

    <TextView
        android:id="@+id/c2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Cell2"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_toLeftOf="@+id/Cell3"
        android:layout_toStartOf="@+id/Cell3"
        android:text="@string/cell2" />

    <TextView
        android:id="@+id/c4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Cell3"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_toEndOf="@+id/c3"
        android:layout_toRightOf="@+id/c3"
        android:text="@string/cell4" />

    <TextView
        android:id="@+id/c3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Cell3"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/Cell4"
        android:layout_toStartOf="@+id/Cell4"
        android:text="@string/cell3" />

    <Button
        android:id="@+id/Room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/c2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/c2"
        android:layout_marginTop="20dp"
        android:onClick="WhichRoom"
        android:text="@string/room" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Room"
        android:layout_alignBottom="@+id/Room"
        android:layout_alignEnd="@+id/Cell4"
        android:layout_alignRight="@+id/Cell4"
        android:onClick="WhichActivity"
        android:text="@string/Activity" />

</RelativeLayout>
